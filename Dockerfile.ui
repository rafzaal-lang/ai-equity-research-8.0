# Dockerfile.ui â€” Minimal UI container
# Build: docker compose -f infra/docker-compose.yml -f infra/docker-compose.ui.yml up -d --build ui
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

# System deps (runtime for lxml + curl for healthcheck)
RUN apt-get update && apt-get install -y --no-install-recommends \    libxml2 libxslt1.1 curl \    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Python deps first (use your repo's requirements.txt at build time)
COPY requirements.txt ./
RUN pip install --upgrade pip && pip install -r requirements.txt

# Copy the rest of your repo (expects src/, ingestion/, ui_minimal.py, etc.)
COPY . .

# Non-root for safety
RUN useradd -ms /bin/bash appuser && chown -R appuser:appuser /app
USER appuser

ENV PYTHONPATH=/app
EXPOSE 8090

CMD ["uvicorn", "ui_minimal:app", "--host", "0.0.0.0", "--port", "8090"]
